<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dialog"
    android:padding="10dp"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_marginTop="100dp"
        >
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/info_txt"
    android:textAlignment="center"
    android:fontFamily="@string/sans_serif_thin"
    android:textSize="18sp"
    android:text="Listkeeper needs your country code and phone number to send OTP"
    android:layout_margin="16dp"/>
        <android.support.v7.widget.AppCompatSpinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_txt"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:freezesText="true"
            android:backgroundTint="@color/btn_add_selected"
            android:id="@+id/spin"
            >
        </android.support.v7.widget.AppCompatSpinner>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/btn_add_selected"
            android:layout_below="@+id/spin"
            />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:id="@+id/linearlayout"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/info_txt">

        <EditText
            android:id="@+id/v1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:maxEms="3"
            android:maxLength="3"
            android:textSize="18sp"
            android:freezesText="true"
            android:fontFamily="@string/sans_serif_thin"
            android:inputType="number"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/btn_add_selected"/>

        <EditText
            android:id="@+id/v2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:hint="Phone number"
            android:textSize="18sp"
            android:maxLength="10"
            android:freezesText="true"
            android:inputType="phone"
            android:fontFamily="@string/sans_serif_thin"
            android:backgroundTint="@color/btn_add_selected"
            android:maxEms="10"/>
    </LinearLayout>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/continue_btn"
            android:elevation="10dp"
            android:src="@drawable/ic_action_arrow_right"
            android:tint="@color/bg_dialog"
            android:layout_below="@+id/linearlayout"
            android:drawableTint="@color/bg_dialog"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_enter"/>
    </RelativeLayout>
</ScrollView>