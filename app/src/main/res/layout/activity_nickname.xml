<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    tools:context="com.saumya.fitmate.NicknameActivity">

    <TextView
        android:id="@+id/info_what"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="What may I call you?"
        android:textColor="#009688"
        android:textSize="@dimen/_25sdp" />


    <!--<ImageView-->
    <!--android:layout_below="@+id/info_what"-->
    <!--android:layout_marginLeft="@dimen/_115sdp"-->
    <!--android:layout_marginTop="@dimen/_108sdp"-->
    <!--android:id="@+id/eye1"-->

    <!--android:layout_width="@dimen/_30sdp"-->
    <!--android:layout_height="@dimen/_35sdp"-->
    <!--android:background="@drawable/eyes" />-->
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/animation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_what"
        android:layout_marginLeft="@dimen/_90sdp"
        android:layout_marginTop="@dimen/_108sdp"
         />

    <!--<ImageView-->
    <!--android:layout_below="@+id/info_what"-->
    <!--android:layout_marginLeft="@dimen/_7sdp"-->
    <!--android:layout_marginTop="@dimen/_108sdp"-->
    <!--android:id="@+id/eye2"-->
