<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/_55sdp"
    android:background="#ececec">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"

        android:elevation="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.github.lzyzsd.circleprogress.ArcProgress
                    android:id="@+id/activities_progress"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/cortana"
                    app:arc_finished_color="#009688"
                    app:arc_progress="15"
                    app:arc_text_color="#fff"
                    app:arc_text_size="@dimen/_14sdp"
                    app:arc_unfinished_color="#cdcdcd"

                    />

                <ImageView
                    android:id="@+id/image_run"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignTop="@+id/activities_progress"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:src="@drawable/ic_directions_run1"
                    android:tint="#009688" />

                <TextView
                    android:id="@+id/text_run_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_run"
                    android:layout_marginLeft="@dimen/_52sdp"
                    android:text="9"
                    android:textColor="#009688"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/text_run_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_43sdp"
                    android:layout_marginTop="@dimen/_65sdp"
                    android:text="min"
                    android:textColor="#009688"
                    android:textSize="@dimen/_15sdp" />

                <View
                    android:id="@+id/indicator_run"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_25sdp"

                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_85sdp"
                    android:background="@drawable/eyes" />

                <TextView
                    android:id="@+id/indicator_txt_run"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_48sdp"
                    android:layout_marginTop="@dimen/_90sdp"
                    android:text="15%"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.github.lzyzsd.circleprogress.ArcProgress
                    android:id="@+id/food_progress"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/cortana"
                    app:arc_finished_color="#ff8a65"
                    app:arc_progress="15"
                    app:arc_text_color="#fff"
                    app:arc_text_size="@dimen/_14sdp"
                    app:arc_unfinished_color="#cdcdcd"

                    />

                <ImageView
                    android:id="@+id/food_image"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_alignLeft="@+id/food_progress"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:src="@drawable/ic_restaurant1"
                    android:tint="#ff8a65" />

                <TextView
                    android:id="@+id/text_food_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/food_image"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_52sdp"
                    android:text="200"

                    android:textColor="#ff8a65"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/text_food_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/food_image"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_65sdp"

                    android:text="cals"
                    android:textColor="#ff8a65"
                    android:textSize="@dimen/_15sdp" />

                <View
                    android:id="@+id/indicator_food"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignLeft="@+id/food_progress"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_85sdp"
                    android:background="@drawable/eyes"
                    android:backgroundTint="#ff8a65" />

                <TextView
                    android:id="@+id/indicator_txt_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/text_food_down"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_90sdp"
                    android:text="15%"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.github.lzyzsd.circleprogress.ArcProgress
                    android:id="@+id/sleep_progress"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/cortana"
                    app:arc_finished_color="#00bcd4"
                    app:arc_progress="15"
                    app:arc_text_color="#fff"
                    app:arc_text_size="@dimen/_14sdp"
                    app:arc_unfinished_color="#cdcdcd"

                    />

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_39sdp"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:src="@drawable/sleep"
                    android:tint="#00bcd4" />

                <TextView
                    android:id="@+id/text_sleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_52sdp"
                    android:text="Good"
                    android:textColor="#00bcd4"
                    android:textSize="@dimen/_15sdp" />

                <View
                    android:id="@+id/indicator_sleep"
                    android:layout_width="@dimen/_82sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_85sdp"
                    android:background="@drawable/eyes"
                    android:backgroundTint="#00bcd4" />

                <TextView
                    android:id="@+id/indicator_txt_sleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_90sdp"
                    android:text="7 hr 42 mins"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_bottom_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card"
        android:layout_marginTop="@dimen/_1sdp"></android.support.v7.widget.RecyclerView>
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:elevation="@dimen/_20sdp"
        app:menu_buttonSpacing="@dimen/_4sdp"
        app:menu_colorNormal="#009688"
        app:menu_colorPressed="#009688"
        app:menu_colorRipple="#99FFFFFF"
        app:menu_labels_ellipsize="end"
        app:menu_labels_padding="@dimen/_5sdp"
        app:menu_labels_singleLine="true"
        app:menu_labels_textSize="@dimen/_12sdp"
        fab:menu_animationDelayPerItem="50"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="@dimen/4sdp"
        fab:menu_colorNormal="#009688"
        fab:menu_colorPressed="#009688"
        fab:menu_colorRipple="#99FFFFFF"
        fab:menu_fab_hide_animation="@anim/my_hide_animation"
        fab:menu_fab_label="your_label_here"
        fab:menu_fab_show_animation="@anim/my_show_animation"
        fab:menu_fab_size="normal"
        fab:menu_icon="@drawable/fab_add"
        fab:menu_labels_colorNormal="#333333"

        fab:menu_labels_colorPressed="#444444"
        fab:menu_labels_colorRipple="#66FFFFFF"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_paddingBottom="4dp"
        fab:menu_labels_paddingLeft="8dp"
        fab:menu_labels_paddingRight="8dp"
        fab:menu_labels_paddingTop="4dp"
        fab:menu_labels_position="left"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="true"
        fab:menu_labels_style="@style/YourCustomLabelsStyle"
        fab:menu_labels_textColor="#FFFFFF"
        fab:menu_openDirection="up"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="3dp"
        fab:menu_showShadow="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundTint="#fff"
            android:tint="#fff"
            android:src="@drawable/ic_directions_run"
            app:fab_colorNormal="#009688"
            app:fab_colorPressed="#009688"
            app:fab_colorRipple="#66FFFFFF"
            app:fab_elevationCompat="@dimen/_10sdp"
            app:fab_label="Activities"
            fab:fab_label="Menu item 1"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundTint="#fff"
            android:src="@drawable/ic_restaurant"
            app:fab_colorNormal="#ff8a65"
            app:fab_colorPressed="#ff8a65"
            app:fab_colorRipple="#66FFFFFF"
            app:fab_elevationCompat="@dimen/_15sdp"
            app:fab_label="Diet"
            fab:fab_label="Menu item 1"

            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_item3"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:foregroundTint="#fff"
            android:src="@drawable/ic_fitness_center"
            app:fab_colorNormal="#ff0000"
            app:fab_colorPressed="#ff0000"
            app:fab_colorRipple="#66FFFFFF"
            app:fab_elevationCompat="@dimen/_10sdp"
            app:fab_label="Miscellenous"
            fab:fab_label="Menu item 1"
            fab:fab_size="mini" />
    </com.github.clans.fab.FloatingActionMenu>
</RelativeLayout>
